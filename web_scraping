import requests
from bs4 import BeautifulSoup

def scrape(url, filename):
    try:
        # Send an HTTP GET request to the URL
        response = requests.get(url)

    # Check if the request was successful
        if response.status_code == 200:
            # Parse the HTML content of the page
            soup = BeautifulSoup(response.text, "html.parser")

            # Find the elements containing the information you want
            # For example, to extract all the text from <p> tags:
            paragraphs = soup.find_all("p")

            # Create or open a text file for writing
            with open(filename, "w", encoding="utf-8") as file:
                # Write the extracted information to the text file
                for paragraph in paragraphs:
                    file.write(paragraph.get_text() + "\n")

            print("Data has been scraped and saved to ", filename)
        else:
            print("Failed to retrieve the webpage. Status code:", response.status_code)

    except Exception as e:
        print("An error occurred:", str(e))


scrape("https://www.fortunebusinessinsights.com/scada-market-102433", "0 fortunebusiness.txt")
